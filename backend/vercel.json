{
  "builds": [
    {
      "config": {
        "includeFiles": [
          "node_modules/**",
          "package.json",
          "package-lock.json",
          "config/**",
          "models/**",
          "routes/**",
          "middlewares/**"
        ]
      },
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    {
      "dest": "index.js",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      },
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH",
        "OPTIONS"
      ],
      "src": "/api/(.*)"
    },
    {
      "dest": "index.js",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      },
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH",
        "OPTIONS"
      ],
      "src": "/(.*)"
    }
  ],
  "version": 2
}
